{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "./src",
    "paths": {
      "api/*": ["api/*"],
      "lib/*": ["lib/*"],
      "schemas/*": ["schemas/*"],
      "types/*": ["types/*"],
      "*": ["*", "node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
